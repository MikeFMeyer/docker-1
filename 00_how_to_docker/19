docker run -v ~/:/root -dit --name Abathur -p 3000:3000 python:2-slim
docker exec Abathur pip install Flask
echo 'from flask import Flask\napp = Flask(__name__)\n@app.route("/")\ndef hello():\n\treturn "<h1>Hello, World!</h1>"' > ~/hello.py
docker exec --env FLASK_APP=/root/hello.py Abathur flask run --port 3000 --host 0.0.0.0
